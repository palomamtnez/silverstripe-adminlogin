{
    "name": "axyr/silverstripe-adminlogin",
    "description": "Use a custom login screen to log in to the admin section",
    "type": "silverstripe-vendormodule",
    "keywords": ["silverstripe", "login", "module", "cms"],
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "Martijn van Nieuwenhoven",
        "email": "info@axyrmedia.nl"
    }],
    "require": {
        "silverstripe/framework": "^4"
    },
    "require-dev": {
        "phpunit/PHPUnit": "~5.7@stable"
    },
    "scripts": {
        "lint": "phpcs --extensions=php src/",
        "syntax-check": "find src/ -type f -name '*.php' -exec php -l {} \\;",
        "lint-clean": "phpcbf src/ --extensions=php"
    },
    "autoload": {
        "psr-4": {
            "Axyr\\SilverStripeAdminLogin\\": "src/",
            "Axyr\\SilverStripeAdminLogin\\Tests\\": "tests/"
        }
    },
    "extra": {
        "screenshots": [
          "images/screenshot.png"
        ],
        "expose": [
            "client"
        ]
    }
}
